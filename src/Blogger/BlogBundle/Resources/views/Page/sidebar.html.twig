{# src/Blogger/BlogBundle/Resources/views/Page/sidebar.html.twig #}

<section class="section">
	<header>
		<h3>Облако тэгов</h3>
	</header>
	<p class="tags">
		{% for tag, weight in tags %}
		<span class="weight-{{ weight }}">{{ tag }}</span>
		{% else %}
	<p>Тута нет тэгов</p>
	{% endfor %}
	</p>
</section>

<section class="section">
	<header>
		<h3>Последние коментарии</h3>
	</header>
	{% for comment in latestComments %}
		<article class="comment">
			<header>
				<p class="small"><span class="highlight">{{ comment.user }}</span> написал для
					<a href="{{ path('blogger_blog_show', { 'id': comment.blog.id }) }}#comment-{{ comment.id }}">
						{{ comment.blog.title }}
					</a>
					[<em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|date('Y-m-d h:iA') }}</time></em>]
				</p>
			</header>
			<p>{{ comment.comment }}</p>
			</p>
		</article>
	{% else %}
		<p>Нету коментов</p>
	{% endfor %}
</section>